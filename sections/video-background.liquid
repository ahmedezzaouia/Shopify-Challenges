<section class="video-section">
    <div class="video-container">
        <div class="color-overlay"></div>
        <video autoplay loop muted>
            <source src="video.mp4" type="video/mp4">
        </video>
    </div>

    <div class="video-content">
        <div class="text_container">
            <h1>Fresh finds</h1>
            <p>Freshen up your collection for spring with these unique pieces! Shop the latest styles from a variety
                of
                designers here at Local Eclectic.
            </p>
            <a href="">
                <button>Shop Now</button>
            </a>
        </div>
    </div>
</section>

<!-- ************************** CSS Section *********************** -->

{% style %}
.video-section {
    position: relative;
    width: 100%;
    height: 750px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    /* background-color: blueviolet; */
  }
  .video-container {
    justify-content: center;
    align-items: center;
  }
  .video-container video {
    object-fit: cover;
    width: 100vw;
    height: 62vh;
  }
  .color-overlay {
    position: absolute;
    top: 0;
    left: 0;
    background-color: rgb(63, 42, 180);
    width: 100%;
    height: 100%;
    opacity: 0.2;
  }
  
  .video-content {
    /* background-color: rgb(221, 92, 17); */
    position: absolute;
    color: white;
    height: 100%;
    width: 100%;
    display: flex;
  }
  .video-content h1 {
    margin: 0.5rem;
    font-size: 4rem;
    font-family: Masqualero;
    /* background-color: violet; */
    width: 100%;
    text-align: center;
  }
  .text_container {
    width: 60%;
    opacity: 0.8;
    margin: auto;
    background: yellowgreen;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 0.8rem;
    /* margin-left: 1rem;
    margin-top: 32rem; */
  }
  .video-content p {
    margin: 0.3rem;
    line-height: 1.5;
    font-size: 1.3rem;
    font-family: system-ui;
  
  }
  .video-content a {
    text-decoration: none;
    /* background-color: bisque; */
    width: 100%;
    display: flex;
    justify-content: center;
  }
  .video-content button {
    margin: 0.8rem;
    width: 170px;
    display: block;
    text-align: center;
    font-size: 14px;
    letter-spacing: 0.1em;
    cursor: pointer;
    padding: 15px;
    line-height: normal;
    /* border: none; */
    border-radius: 20px;
    background: transparent;
    border: 1px solid;
    color: white;
  }
  
  /* ************************ Mobile Design ******************* */
  @media only screen and (max-width: 770px) {
    .video-section {
      height: 400px;
    }
    .video-container video {
      height: 48vh;
    }
    .video-content h1 {
      font-size: 2.68rem;
    }
    .video-content p {
      line-height: 1.3;
      font-size: 1rem;
    }
    .video-content button {
      margin: 0.6rem;
      width: 115px;
      font-size: 12px;
      padding: 8px;
    }
    .text_container {
      width: 80%;
      margin: auto;
    }
  }
  
{% endstyle %}

