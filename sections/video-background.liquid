                                }
                                const languageslist = document.querySelector(".weglot-options");
                                languageslist.style.color= 'black';
                                
                  
                } 
          
        

                const header = document.querySelector('header');
                window.addEventListener('scroll',()=>{
                              if(window.pageYOffset > 0)
                              {
                                if(checkIfIncluded("styleSheet.css")=== true){
                              	 unsetHeaderTrsp();
                                }
                              
                              }
                              else
                              {
                               
                                setHeaderTrsp();
                               
                              }
                  })
                  
                  
                   const menu_items = document.querySelectorAll(".menu__item");
        
                      for(let i = 0; i < menu_items.length; i++) {
                                          
                             
                          menu_items[i].addEventListener("mouseenter",()=>
                                  {
                                   unsetHeaderTrsp();
                                  })
                                  
                         
                      }
                      
                      const videohover = document.querySelector(".video-content");
