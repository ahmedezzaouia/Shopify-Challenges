     	  function checkIfIncluded(file) {
              var links = document.getElementsByTagName("link");
              for(var i = 0; i < links.length; i++) {
                  if (links[i].href.substr(-file.length) == file)
                      return true;
              }

              var scripts = document.getElementsByTagName("script");
              for(var i = 0; i < scripts.length; i++) {
                  if (scripts[i].src.substr(-file.length) == file)
                      return true;
              }

              return false;
			}
          
                const setHeaderTrsp = ()=>{
                
          
                 document.head.appendChild(styleSheet);
                                
                                var nodes = document.querySelectorAll('.navlink');
                                for(var i=0; i<nodes.length; i++) {
                                   nodes[i].style.color= 'white'
                                }
                                
                                var nodes = document.querySelectorAll('header a');
                                for(var i=0; i<nodes.length; i++) {
                                   nodes[i].style.color= 'white'
                                }
                                const languageslist = document.querySelector(".weglot-options");
                                languageslist.style.color= 'white';
                
                }
               
        
        		const unsetHeaderTrsp = () => {
               
                   
                     document.head.removeChild(styleSheet);
                  
                
                                var nodes = document.querySelectorAll('.navlink');
                                for(var i=0; i<nodes.length; i++) {
                                   nodes[i].style.color= 'black'
                                }
                                
                                var nodes = document.querySelectorAll('header a');
                                for(var i=0; i<nodes.length; i++) {
